@model ProductVM


        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-10 col-md-10">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Delete Product</h4>
                            </div>
                            <div class="content">
    <form asp-area="Admin" asp-controller="Product" asp-action="delete" method="post" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-12">

                                            <input type="hidden"  asp-for="productID"/>
                                            <div class="form-group">
                                                <label asp-for="Name">Product Name:</label>
                                                <input type="text" class="form-control border-input" placeholder="Macbook pro" asp-for="Name" disabled >
                                           <br/>
                                             <span class="text-danger font-weight-bold" asp-validation-for="Name"></span>
                                            </div>


                                            <div class="form-group">
                                                <label asp-for="unitPrice">Product Price:</label>
                                                <input type="text" class="form-control border-input" placeholder="$2500" asp-for="unitPrice" disabled>
                                            <br/>
                                             <span class="text-danger font-weight-bold" asp-validation-for="unitPrice"></span>
                                            </div>

                                            <div class="form-group">
                                                <label asp-for="Description">Product Description:</label>
                                                <textarea  id="" cols="30" rows="10"
                                                          class="form-control border-input" placeholder="Product Description" asp-for="Description" disabled></textarea>
                                           <br/>
                                             <span class="text-danger font-weight-bold" asp-validation-for="Description"></span>
                                                      </div>

                                            <div class="form-group">
                                                <label asp-for="img">Product Image:</label>
                                              <img src="~/files/images/@Model.imgPath"  width="100" height="50" class="img-thumbnail"/>
                                               <span class="text-danger font-weight-bold" asp-validation-for="img"> </span>
                                            </div>
                                           
                                              <div class="form-group">
                                                <label asp-for="quantity">Product Quantity:</label>
                                                <input type="text" class="form-control border-input" asp-for="quantity" disabled>
                                                <br/>
                                             <span class="text-danger font-weight-bold" asp-validation-for="quantity"></span>
                                            </div>

                                  <div class="">
                                        <button type="submit" class="btn btn-info btn-danger btn-fill btn-wd">Delete Product</button>
                                        <a asp-area="Admin"  class="btn btn-info btn-fill btn-wd" asp-controller="Product" asp-action="Index" > Back To Product List</a>
                                    </div>

                                    </div>
                                    </div>
                              
                                    <div class="clearfix"></div>
                                </form>
                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
