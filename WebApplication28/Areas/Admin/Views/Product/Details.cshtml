@model ProductVM
<div class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Product Detail</h4>
                        <p class="category">List of all stock</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-striped">
                            <tbody>

                                <tr>
                                    <th>ID</th>
                                    <td>@Model.productID</td>
                                </tr>

                                <tr>
                                    <th>Name</th>
                                    <td>@Model.Name</td>
                                </tr>

                                <tr>
                                    <th>Description</th>
                                    <td>@Model.Description</td>
                                </tr>

                                <tr>
                                    <th>Price</th>
                                    <td>@Model.unitPrice</td>
                                </tr>


                                <tr>
                                    <th>quantity</th>
                                    <td>@Model.quantity</td>
                                </tr>
                                <tr>
                                    <th>Image</th>
                                    <td><img src="~/files/images/@Model.imgPath" alt="" class="img-thumbnail" style="width: 150px;"></td>
                                </tr>
                                <tr>


                                    <td>
                                        <a asp-area="Admin" class="btn btn-info btn-fill btn-wd" asp-controller="Product" asp-action="Index"> Back To Product List</a>
                                    </td>
                                </tr>
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>